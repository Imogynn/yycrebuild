<div class="row">
  <div class="span12">
    <%= form_for(Need.new, :class => "form-horizontal") do |f| %>
      <div class="control-group">
        <label class="control-label" for="inputEmail">I need</label>
        <div class="controls">
          <%= f.text_area :description, cols: 160, rows: 2, :class => "span12" %>
        </div>
      </div>
      <div class="control-group">
        <div class="controls">
          <%= f.submit "Submit" %>
        </div>
      </div>
  <% end %>
  </div>
</div>

<div class="row">
  <div class="span12">
    <h1>Needs</h1>
    <table class="table">
      <tr>
        <th>Description</th>
        <th>Person</th>
      </tr>
      <% @needs.each do |need| %>
        <tr>
        <td><%= need.description %></td>
        <td><%= need.user.email %></td>
      </tr>
    <% end %>
    </table>
  </div>
</div>
